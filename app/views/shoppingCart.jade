extend header
body
block content
  if products !='' 
    .row
       .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
         ul.list-group
          each product in products
           li.list-group-item
            span.badge=  product.qty                       
            span(style='font-weight: bold')=  product.item.itemTitle 
            ='  '                    
            span.label.label-success Rs #{product.price}
            = '  '                          
            .btn-group
              button.btn.btn-primary.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') 
               |Action   
               span.caret                             
              ul.dropdown-menu
                  li
                    a(href='/Shopping/reduce/'+product.item._id) Reduce by 1                                 
                  li
                    a(href='/Shopping/remove/'+product.item._id) Remove All                   
    .row
      .col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
          if totalPrice!=0  
              strong Total:  #{totalPrice}          
  else    
     .row
       .col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
         h2 No Items in Cart yet!
  br       
  .row
       .col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
          a.btn.btn-primary(href='/Shopping')
              i.fa.fa-arrow-circle-o-left(aria-hidden='true')
              |  Back
