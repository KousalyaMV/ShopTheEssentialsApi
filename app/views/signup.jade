extend header
title Signup Form
body
block content
  .row
    .col-md-4.col-md-offset-4
      h1 Sign Up
      if(message.length)
        .alert.alert-danger
          p= message          
      form(action='/Shopping/signup', method='post')
        .form-group
          label First Name         
          input.form-control(type='text', name='firstName', placeholder='First Name',required)             
        .form-group
          label Last Name            
          input.form-control(type='text', name='lastName', placeholder='Last Name',required)          
        .form-group
          label E-Mail                
          input.form-control(type='email',name='email',placeholder='Email',required)            
        .form-group
          label Password                 
          input.form-control(type='password', name='password', placeholder='Password',,required) 
        button.btn.btn-primary(type='submit') sign up            
