extend header
body
block content
  if(products.length)
    .row
      each product in products
        .col-sm-6.col-md-4
          .thumbnail
            img.img-responsive(src='/images/image1.jpg', alt='Ecommerce')    
            .caption
            h3 Item Name:  #{product.itemTitle}
            p.description Item Details:  #{product.itemDescription}
            h4 Item Type:  #{product.itemType}
              hr    
              .clearfix
                .price.pull-left Rs #{product.itemPrice}           
                a.btn.btn-success.pull-right(href='/Shopping/addToCart/'+product._id, role='button') Add To Cart
              .clearfix
                a.btn.btn-link.pull-left(href='/Shopping/updateProduct/'+product.itemTitle
                , role='button') Update Product 
                |           
                form(action='/Shopping/deleteProduct/'+product.itemTitle, method='post')
                   input.btn.btn-link.pull-right(type='submit', value='Delete Product')
  else    
    .row
      .col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
        h2 No Items to Shop..Please create a product!
              


